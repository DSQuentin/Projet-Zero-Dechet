{% form_theme commentForm 'themes/_form.html.twig' %}
{{ form_start(commentForm) }}
    {{ form_widget(commentForm) }}
    <div class="flex justify-end mb-4">
        <button class="ml-4 px-3 py-2 text-xl rounded-md leading-5 font-medium text-white bg-blue-500 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:text-blue-600 focus:bg-gray-100 transition duration-150 ease-in-out">{{ button_label|default('Commenter') }}</button>
