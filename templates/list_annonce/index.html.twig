{% extends 'base.html.twig' %}

{% block title %}Liste des annonces{% endblock %}

{% block body %}


        <div class="relative bg-gray-50 pt-8 pb-12 px-4 sm:px-6 lg:pt-16 lg:pb-12 lg:px-8">
                <div class="relative max-w-7xl mx-auto">
                        <div class="text-center border-b-2 border-gray-200">
                                <h2 class="mb-6 text-3xl leading-9 tracking-tight font-extrabold text-blue-500 sm:text-4xl sm:leading-10">
                                        Toutes les annonces
                                </h2>
                        </div>

                        {% include 'list_annonce/_filter.html.twig' %}

                        <div class="mt-12 grid gap-5 max-w-lg mx-auto lg:grid-cols-3 lg:max-w-none">
                                {% for annonce in annonces %}
                                        {% include 'list_annonce/_card.html.twig' %}
                                {% endfor %}
                        </div>
                </div>
                <div class="flex justify-center mt-12">
                        {{ knp_pagination_render(annonces, 'paginations/_pagination.html.twig') }}
                </div>
        </div>




{% endblock %}
