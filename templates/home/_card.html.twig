<div class="flex flex-col rounded-lg shadow-lg overflow-hidden">
    <div class="flex-shrink-0">
        <img class="h-48 w-full object-cover"
             src="https://images.unsplash.com/photo-1496128858413-b36217c2ce36?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1679&q=80"
             alt="" />
    </div>
    <div class="flex-1 bg-white p-6 flex flex-col justify-between">
        <div class="flex-1">
            <a href="{{ path('annonces_show', {'id' : annonce.id}) }}" class="block">
                <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                    {{ annonce.title}}
                </h3>
                <p class="mt-3 text-base leading-6 text-gray-500">
                    {{ annonce.mediumResumeContent }}
                </p>
            </a>
        </div>
        <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
                <a href="#">
                    <img class="h-10 w-10 rounded-full"
                         src="{% if annonce.author.profilePic %}
                                {{ annonce.author.profilePic }}
                                {% else %}img/default_profile_pic.jpeg
                                {% endif %}"
                         alt=""/>
                </a>
            </div>
            <div class="ml-3">
                <p class="text-sm leading-5 font-medium text-gray-900">
                    <p>
                        {% if annonce.author.username %}
                            {{ annonce.author.username }}
                        {% else %}Anonyme
                        {% endif %}
                    </p>
                </p>
                <div class="flex text-sm leading-5 text-gray-500">
                    <p>Post√© le {{ annonce.createdAt|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>
    </div>
</div>