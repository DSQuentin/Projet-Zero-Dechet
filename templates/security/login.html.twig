{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}


    <div class="rounded-t-lg overflow-hidden px-3 py-10 bg-gray-200 flex justify-center">
        <div>
            {% if error %}
                <div class="mb-2 bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form class="bg-white shadow-md rounded px-24 pt-6 pb-8 mb-4" method="post">
                <div class="text-center text-blue-400 font-bold text-2xl mb-4">
                    <h1>Connexion</h1>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-400  mb-2" for="username">
                        Nom d'utilisateur
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-6 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" name="username" type="text" placeholder="Nom d'utilisateur" required autofocus>
                </div>
                <div class="mb-6">
                    <label class="block text-blue-400 mb-2" for="password">
                        Mot de passe
                    </label>
                    <input class="shadow appearance-none border rounded w-full py-2 px-6 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" name="password" type="password" placeholder="Mot de passe" required>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                </div>
                <div class="flex items-center justify-center">
                    <button class="px-3 py-2 rounded-md text-sm leading-5 font-medium text-white bg-blue-500 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:text-blue-600 focus:bg-gray-100 transition duration-150 ease-in-out" type="submit">
                        Se connecter
                    </button>
                </div>
            </form>
        <p class="text-center text-gray-500 text-sm mt-4">
            Pas encore inscrit ? :
            <a href="{{ path('app_register') }}" class="px-3 py-2 rounded-md text-sm leading-5 font-medium text-blue-500 hover:text-blue-600 hover:bg-gray-100 focus:outline-none focus:text-blue-600 focus:bg-gray-100 transition duration-150 ease-in-out">S'inscrire</a>
        </p>
        </div>

    </div>

{% endblock %}